# Copy this file to .env and fill values before deploying locally
# On Render, set these as environment variables in the service settings (do NOT commit real secrets)

# MongoDB Connection URI (Atlas recommended for production)
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/<dbname>?retryWrites=true&w=majority

# JWT secrets
JWT_SECRET=replace_with_a_long_random_secret
JWT_REFRESH_SECRET=replace_with_a_long_random_refresh_secret

# CORS origin for the frontend (Vercel site URL)
CLIENT_ORIGIN=https://your-frontend.vercel.app

# Optional token lifetimes
ACCESS_TOKEN_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# Node environment
NODE_ENV=production

# PORT is set by Render; you can override locally
PORT=5000
